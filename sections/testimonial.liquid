<div id="featured-text-{{ section.id }}" class="featured-text section-standard" data-section-id="{{ section.id }}" data-section-type="featured-text-section">
  <div class="contain-full-width align-{{ section.settings.alignment }}">
        {% if section.settings.heading != blank %}
          <h1 class="main-heading">{{ section.settings.heading | escape }}</h1>
        {% endif %}
    <div class="wrapper testi-slider ">
{% for block in section.blocks %}
      <div class="content  rte">
        {% if block.settings.title != blank %}
          <h2>{{ block.settings.title | escape }}</h2>
        {% endif %}
        {% if block.settings.text != blank %}
          <div class="richtext">
            {{ block.settings.text }}
          </div>
        {% endif %}
      </div>
{% endfor %}
    </div>
  </div>
</div>
<style>
  #featured-text-{{ section.id }} .main-heading{
    color: {{section.settings.text_color_head}};
  }
  #featured-text-{{ section.id }} {
  background-color: {{section.settings.bg_color}};
    font-weight:bold;
}
  #featured-text-{{ section.id }} h2,
  #featured-text-{{ section.id }} p{
    color: {{section.settings.text_color}};
  }
  .featured-text .wrapper.testi-slider{
    
  }
  .featured-text .testi-slider .content {
  background: {{section.settings.bg_testimonial}};
  border-radius: 15px;
  padding: 30px 40px;
    margin: 10px;
  }
  .main-heading {
  padding-bottom: 20px;
}
  .slick-next:before,.slick-prev:before {
    content: " " !important;
}
.fa:before{
    color:white;
    font-size:25px;
  }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="{{ 'slick.min.js' | asset_url }}" defer="defer"></script>   
<link rel="stylesheet" href="{{ 'slick-theme.css' | asset_url }}"> 
<link rel="stylesheet" href="{{ 'slick.css' | asset_url }}"> 
<script type="text/javascript">
 $(document).ready(function(){
      $('.testi-slider').slick({
        dots: false,
  infinite: false,
  speed: 300,
  slidesToShow: 3,
  slidesToScroll: 1,
  infinite:true,
  arrows: true,
  prevArrow:"<button type='button' class='slick-prev pull-left'><i class='fa fa-angle-left' aria-hidden='true'></i></button>",
  nextArrow:"<button type='button' class='slick-next pull-right'><i class='fa fa-angle-right' aria-hidden='true'></i></button>",
  responsive: [
    {
      breakpoint: 800,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
    ]
      });
    });
</script>
{% schema %}
{
  "name": "Testimonial",
  "class": "featured-text-section testimonial",
  "settings": [
    {
      "type": "color",
      "id": "text_color_head",
      "label": "Main Heading Color "
    },
    {
      "type": "text",
       "id": "heading",
       "label": "Heading",
       "default": "Rich text"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color"
    },
    {
      "type": "color",
      "id": "bg_testimonial",
      "label": "Background Color Testimonial"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "default": "center",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"},
        {"value": "right", "label": "Right"}
      ]
    }
  ],
  "blocks": [
    {
      "type": "richtext",
      "name": "Rich text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Rich text"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial",
      "category": "Text"
    }
  ]
}
{% endschema %}
